<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="input_user_name">
        <item name="android:hint">Name</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="check_box_name">
        <item name="android:text">Is that your name ?</item>
        <item name="android:onClick">checkedName</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="categories">
        <item name="android:text">Category : Animal\'s </item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!--    questions 1st -->
    <style name="question1" parent="categories">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">1. What does the Duck said ?</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- radio group -->
    <style name="radio_group_choices">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- radio button -->
    <style name="quack">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:text">quack ! quack ! quack !</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceListItem</item>
    </style>
    <style name="squeak" parent="quack">
        <item name="android:text">squeak ! squeak ! squeak !</item>
    </style>

    <style name="cluck" parent="quack">
        <item name="android:text">cluck ! cluck ! cluck !</item>
    </style>

    <!--    questions 2nd -->
    <style name="question2" parent="question1">
        <item name="android:text">2. What does the Goat said ?</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="oink" parent="quack">
        <item name="android:text">oink ! oink ! oink !</item>
    </style>

    <style name="meh" parent="quack">
        <item name="android:text">meh ! meh ! meh !</item>
    </style>

    <style name="baa" parent="quack">
        <item name="android:text">baa ! baa ! baa !</item>
    </style>


    <!--    questions 3rd -->
    <style name="question3" parent="question2">
        <item name="android:text">3. What does the Rooster said ?</item>
    </style>

    <style name="neigh" parent="quack">
        <item name="android:text">neigh ! neigh ! neigh !</item>
    </style>

    <style name="moo" parent="quack">
        <item name="android:text">moo ! moo ! moo !</item>
    </style>

    <style name="cock_a_doodle_doo" parent="quack">
        <item name="android:text">cock-a-doodle-doo !</item>
    </style>


    <!--    questions 4th-->
    <style name="question4" parent="question2">
        <item name="android:text">4. On the nursery song which of the following animal jump of the bed ?</item>
    </style>

    <style name="frog" parent="quack">
        <item name="android:text">frog !</item>
    </style>

    <style name="monkey" parent="quack">
        <item name="android:text">monkey !</item>
    </style>

    <style name="kangaroo" parent="quack">
        <item name="android:text">kangaroo !</item>
    </style>

    <!--    questions 4th-->
    <style name="question5" parent="question2">
        <item name="android:text">5. On the novel nursery book which of the following is very hungry ?</item>
    </style>


    <style name="fly" parent="quack">
        <item name="android:text">fly !</item>
    </style>

    <style name="pig" parent="quack">
        <item name="android:text">pig !</item>
    </style>

    <style name="caterpillar" parent="quack">
        <item name="android:text">caterpillar !</item>
    </style>


    <style name="submit">
        <item name="android:text">Submit</item>
        <item name="android:onClick">submit</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
